{
  "name": "bme-cloud-scheduler-server",
  "type": "module",
  "scripts": {
    "build-server": "cross-env NODE_ENV=production npx tsc",
    "serve-server": "cross-env NODE_ENV=production node dist/server.js",
    "dev-server": "cross-env NODE_ENV=development concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js\""
  },
  "dependencies": {
    "bree": "^9.1.3",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "puppeteer": "^19.8.3",
    "socket.io": "^4.6.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22"
  },
  "nodemonConfig": {
    "ignore": ["package.json", "clusters.json", "package-lock.json", "schedules.json", "tsconfig.json"],
    "delay": 2500
  }
}
